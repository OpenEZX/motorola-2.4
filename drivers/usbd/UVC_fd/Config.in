mainmenu_option next_comment
comment "Motorola UVC Function"

dep_tristate '  Motorola UVC Function' CONFIG_USBD_UVC  $CONFIG_USBD
if [ "$CONFIG_USBD_UVC" = "y" -o "$CONFIG_USBD_UVC" = "m" ]; then
   hex     ' VendorID (hex value)' CONFIG_USBD_UVC_VENDORID "22b8"
   hex     ' ProductID (hex value)' CONFIG_USBD_UVC_PRODUCTID "6006"
   hex     ' bcdDevice (binary-coded decimal)'  CONFIG_USBD_UVC_BCDDEVICE "0001"
   string  ' Product Name(string)' CONFIG_USBD_UVC_PRODUCT_NAME "UVC 1.0"
   string  ' UVC Video Control INTF(string)' CONFIG_USBD_UVC_VC_INTF "Video Control Interface"
   string  ' UVC Video Streaming INTF(string)' CONFIG_USBD_UVC_VS_INTF "Video Streaming Interface"
   string  ' UVC Video Streaming Standard INTF(string)' CONFIG_USBD_UVC_VS_STANDARD_INTF "Video Streaming Standard Interface"
   string  ' UVC Video Streaming Class INTF(string)' CONFIG_USBD_UVC_VS_CLASS_INTF "Video Streaming Class Interface"
fi
endmenu
